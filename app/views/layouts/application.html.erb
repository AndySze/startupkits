<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Startupkit" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Startupkit" %>">
    <%- if @canonical_link %>
      <meta rel="canonical" href="<%= @canonical_link %>"> 
    <% end %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <header class="navbar navbar-static-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
      <%- unless current_user %>
        <a id="forkme" href="https://github.com/AndySze/startupkits" target="_blank">
          <img src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" id="github" alt="Fork me on GitHub">
        </a>
      <% end %>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
            <%= render 'layouts/footer' %>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <%- if Rails.env.production? %>
      <%= render "shared/ga" %>
    <% end %>
  </body>
</html>
