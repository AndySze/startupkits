<%= link_to "Startupkit", root_path, :class => 'brand' %>
<ul class="nav">
  <%- if current_user %>
  <li class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <%= current_user.name %>
    <b class="caret"></b>
  </a>
    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
        <li>
          <%= link_to 'Edit account', edit_user_registration_path %>
