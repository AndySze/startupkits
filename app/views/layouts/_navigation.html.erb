          <li>
            <%= link_to 'Admin', users_path %>
          </li>
        <% end %>
        <li>
      <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
      </li>
    </ul>
  </li>
  <li>
  <%= link_to "My ideas", current_user %>
  </li>
<% else %>
  <li>
  <%= link_to "Sign Up",new_user_registration_path(:frm => "nav") %>
  </li>
  <li>
    <%= link_to "Login",new_user_session_path %>
